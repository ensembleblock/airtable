{
  "name": "@ensembleblock/airtable",
  "type": "module",
  "version": "0.0.5",
  "description": "Airtable client powered by fetch",
  "repository": "ensembleblock/airtable",
  "license": "MIT",
  "author": {
    "name": "Eric L. Carraway",
    "url": "https://ensembleblock.com/"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist node_modules",
    "clean:build": "rm -rf dist",
    "dev": "tsc --watch",
    "fix": "eslint --fix --quiet . ; prettier --write --log-level=silent .",
    "format": "prettier --check \"**/*.{js,ts,tsx}\"",
    "lint": "eslint src/*.ts",
    "prebuild": "npm run clean:build",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "pretest": "npm run build",
    "release": "np",
    "test": "npm run lint && npm run typecheck && vitest run",
    "test:dev": "npm run lint && npm run typecheck && vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@percuss.io/eslint-config-ericcarraway": "^3.0.0",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "np": "^10.0.5",
    "prettier": "^3.2.5",
    "typescript": "~5.3",
    "vitest": "^1.6.0",
    "vitest-fetch-mock": "^0.2.2"
  }
}
